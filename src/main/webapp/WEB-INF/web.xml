<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>sistema-banco-horas</display-name>
	<servlet>
		<servlet-name>FuncionarioServlet</servlet-name>
		<servlet-class>com.bancodehoras.servlets.FuncionarioServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MarcacaoServlet</servlet-name>
		<servlet-class>com.bancodehoras.servlets.MarcacaoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FuncionarioServlet</servlet-name>
		<url-pattern>/funcionarios</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MarcacaoServlet</servlet-name>
		<url-pattern>/marcacoes</url-pattern>
	</servlet-mapping>
</web-app>